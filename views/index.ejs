
<%- include('partials/header.ejs', { title: username, isLoggedIn: isLoggedIn }) %>

<div class="userInfoContainer">
    <img src="./img/userImages/Saitama.png" class="userImage">
    <h5><%= username %></h5>
</div>
<div class="container posts">
        <% if (userPosts && userPosts.length > 0) { %>
            <% for (let post of userPosts) { %>
                <div class="col my-1">
                    
                    <div class="card-body shadow-sm">
                        <h5 class="card-title"><%= post.title %></h5>
                        <p class="card-text"><%= post.main_text %></p>
                        <div class="social d-flex">

                            <a href="/edit/<%= post.id %>" class="editbtn btn btn-sm btn-outline-secondary">Edit</a>
                            
                            <a href="/delete/<%= post.id %>" method="post" class="editbtn btn btn-sm btn-outline-danger">Delete</a>

                            <small name="likes" title="likes" class="text-body-secondary">
                                Likes: <%= post.likes || 0 %>
                            </small>
                            <small name="views" title="views" class="text-body-secondary">
                                Views: <%= post.views || 0 %>
                            </small>
                        </div>
                    </div>
                    
                </div>
            <% } %>
        <% } else { %>
            <p>No posts found.</p>
        <% } %>

    

</div>  

<a href="/create_post" type="submit" class="add_post_plus">
    <img type="svg" src="/icons/add_post.svg" alt="+" width="100%" height="100%">
</a>

<%- include("partials/footer.ejs")  %>